<h4>Poll Section</h4>
<button class="remove-section btn btn-small btn-danger" data-id="{{ link.id }}"><i class="fa fa-times"></i> Remove</button>
<input type="hidden" name="sections[]" value="{{ link.id }}">
<div class="section-poll">
	{% if section.poll is not empty %}
		{{ render(controller('StemsPollBundle:Widget:renderPoll', { 'id' : section.poll })) }}
	{% else %}
		<buttton class="btn btn-primary">Add Existing Poll</button>
	{% endif %}
</div>
