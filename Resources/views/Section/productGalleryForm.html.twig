<h4>Product Gallery Section</h4>
<button class="remove-section btn btn-small btn-danger" data-id="{{ link.id }}"><i class="fa fa-times"></i> Remove</button>
<input type="hidden" name="sections[]" value="{{ link.id }}">
<div class="section-product-gallery">
	{{ form_row(form.style) }}
	{{ form_row(form.heading) }}
	{{ form_row(form.caption) }}
	<label>Attached Products</label>
	<div class="add-product-to-gallery">
		<ul class="sortable">
			{% for product in section.products %}
				<li class="product">
					<img src="{{ product.thumbnail }}" width="{{ 128 * product.ratio }}" height="200" />
					<div class="caption">
						<h6>{{ product.heading }}</h6>
						<p>{{ product.caption }}</p>
					</div>
					<button class="show-link btn btn-small" title="Open Link"><i class="fa fa-link"></i></button>
					<button class="remove-productgalleryproduct btn btn-small btn-danger" title="Remove From Gallery" data-id="{{ product.id }}"><i class="fa fa-times"></i></button>
					<input type="hidden" name="{{ link.id }}_section_productgallery_type[products][]" value="{{ product.id }}">
				</li>
			{% endfor %}
		</ul>
		<div class="add-product" data-productgallery-id="{{ section.id }}">
			<label>Add Product From Link</label>
			<input type="text" placeholder="Product Link">
			<a class="btn btn-small btn-primary"><i class="fa fa-plus"></i> Add</a>
			<img class="loader" src="/images/admin/icons/loader-add-to-gallery.gif" width="32" height="32">
		</div>
		<br class="clear">
	</div>
	<br class="clear">
</div>